{% style %}
    .first{
        color: {{ section.settings.text_color }};
        background-color: {{ section.settings.bg_color }}
    }
{% endstyle %}

<h2 class="first">{{ section.settings.Text }}</h2>
{% for block in section.blocks %}
    {% case block.type %}
        {% when 'title' %}
        <h2 style="color: {{ block.settings.text_color }}; background-color: {{ block.settings.bg_color }}"> {{ block.settings.text }} </h2>
    {% endcase %}
{% endfor %}

{% schema %}
{
    "name": "test",
    "settings": [
        {
            "type": "text",
            "id": "Text",
            "label": "Text",
            "default": "My First Heading"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Color",
            "default": "#000"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background-Color",
            "default": "#ffff00"
        } 
    ],
    "blocks": [
        {
            "type": "title",
            "name": "title",
            "settings": [
                {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "Abdullah"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Color",
            "default": "#000"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background-Color",
            "default": "#ffff00"
        } 
        ]
    }
    ],
    "presets": [
        {
            "name": "test"
        }
    ]
}
{% endschema %}